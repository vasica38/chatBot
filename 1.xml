<?xml version = "1.0" encoding = "UTF-8"?>
<aiml version = "1.0.1" encoding = "UTF-8" >
  <category>
    <type>user</type>
    <scope>none</scope>
    <pattern>((HELLO)|(HI)|(CIAO))[ ]?[A-Za-z]*</pattern>
    <template>
      <li>Hi</li>
      <li>Good Day</li>
    </template>
  </category>
  
  <category>
    <type>user</type>
    <scope>none</scope>
    <pattern>(HOW ARE YOU)[? ]?[A-Za-z]*</pattern>
    <template>
      <li>I am fine!</li>
      <li>I am very good!</li>
      <li>I never have been better</li>
    </template>
  </category>
  
 <category>
